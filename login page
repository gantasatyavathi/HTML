<html>
<head>
    <title>loginpage validation using javascript</title>
    <style>body{
        background-color: aqua;
    }
    </style>
    <script type="text/javascript">
        function validate(){
            var username=document.myform.user.value;
            if(username==""){
            alert("username cannot be empty");
            return false;
            }
            if((username.length>5)||(username.length<30)){
            alert("please enter characters between 5 and 30");
            return false;
        }
        var password=document.myform.mypass.value;
        if(password==""){
            alert("password cannot be empty");
            return false;
        }
        if((password.length>5)||(password.length<12)){
            alert("please enter characters between 5 and 12");
            return false;
         }
         var  confirm_password=document.myform.confirm.value;
        if(confirm_password==""){
            alert("password cannot be empty");
            return false;
        }
        if(confirm_password!=password){
            alert("password is not correct");
            return false;
        }
        </script>
        

         




        }